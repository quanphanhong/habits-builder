<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewHabit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/habit_name_layout">

        <TextView
            android:id="@+id/habit_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_habit_title1"
            android:textSize="@dimen/new_habit_title_size"/>

        <EditText
            android:id="@+id/habit_name_edit_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/new_habit_edit_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/habit_description_layout"
        android:layout_below="@+id/habit_name_layout">

        <TextView
            android:id="@+id/habit_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_habit_title2"
            android:textSize="@dimen/new_habit_title_size"/>

        <EditText
            android:id="@+id/habit_description_edit_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:textSize="@dimen/new_habit_edit_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/habit_starting_day_layout"
        android:layout_below="@+id/habit_description_layout">

        <TextView
            android:id="@+id/habit_starting_day_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_habit_title3"
            android:textSize="@dimen/new_habit_title_size"/>

        <EditText
            android:id="@+id/habit_starting_day_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:textSize="@dimen/new_habit_edit_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/habit_frequency_layout"
        android:layout_below="@+id/habit_starting_day_layout">

        <TextView
            android:id="@+id/habit_frequency_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_habit_title4"
            android:textSize="@dimen/new_habit_title_size"/>

        <Spinner
            android:id="@+id/habit_frequency_spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/new_habit_edit_text_size"/>

        <TextView
            android:id="@+id/habit_frequency_text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_habit_title4_1"
            android:textSize="@dimen/new_habit_title_size"/>

    </LinearLayout>

</RelativeLayout>